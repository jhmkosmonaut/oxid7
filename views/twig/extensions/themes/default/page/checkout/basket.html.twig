{% extends "page/checkout/basket.html.twig" %}

{% block basket_btn_next_top %}
    {{ parent() }}
    {% if oViewConf.mollieShowApplePayButtonOnBasket() %}
        {{ script({ include: oViewConf.getModuleUrl('molliepayment','js/mollie.js'), dynamic: __oxid_include_dynamic }) }}
        {{ style({ include: oViewConf.getModuleUrl('molliepayment','css/mollie.css') }) }}

        {% include_dynamic "@molliepayment/frontend/mollieapplepaybutton.html.twig" with {type: "mollie", position: "BasketTop", payment_price: oViewConf.mollieGetApplePayBasketSum(), delivery_costs: oxcmp_basket.getDeliveryCosts(), shipping_id: oxcmp_basket.getShippingId()} %}
    {% endif %}
{% endblock %}

{% block basket_btn_next_bottom %}
    {{ parent() }}
    {% if oViewConf.mollieShowApplePayButtonOnBasket() %}
        {{ script({ include: oViewConf.getModuleUrl('molliepayment','js/mollie.js'), dynamic: __oxid_include_dynamic }) }}
        {{ style({ include: oViewConf.getModuleUrl('molliepayment','css/mollie.css') }) }}

        {% include_dynamic "@molliepayment/frontend/mollieapplepaybutton.html.twig" with {type: "mollie", position: "BasketBottom", payment_price: oViewConf.mollieGetApplePayBasketSum(), delivery_costs: oxcmp_basket.getDeliveryCosts(), shipping_id: oxcmp_basket.getShippingId()} %}
    {% endif %}
{% endblock %}
